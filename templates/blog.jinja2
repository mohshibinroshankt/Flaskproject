{% extends 'extendji.jinja2' %}

{% block content %}
    <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='blog_style.css') }}">
    <h1>Blog</h1>
    {% for post in posts %}
        <div class="post">
            <h2>{{ post.title }}</h2>
            <p class="date">{{ post.date }}</p>
            <p>{{ post.content }}</p>
            <p><em>{{ post.author }}</em></p>
        </div>
    {% endfor %}
{% endblock %}
